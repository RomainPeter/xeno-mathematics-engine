# Environment variables for 2-Category Transformations
# Copy this file to .env and fill in your actual values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model Configuration
LLM_MODEL=kimi/kimi-2
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2048
LLM_N=3

# Selection Thresholds
SELECTOR_CONFIDENCE_THRESHOLD=0.6
SELECTOR_DELTA_V_THRESHOLD=0.1
SELECTOR_MAX_DEPTH=2
SELECTOR_MAX_REWRITES_PER_FR=1

# Budget Constraints
DEFAULT_TIME_MS=300000
DEFAULT_AUDIT_COST=1.0
DEFAULT_MAX_REPLANS=2

# Security Settings
SIGNING_KEY=change-this-in-production
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=INFO

# Cache Settings
CACHE_TTL=3600
CACHE_SIZE_LIMIT=1000

# Rollback Settings
ROLLBACK_MAX_CONSECUTIVE_FAILURES=2
ROLLBACK_DISABLE_STRATEGY_ON_FAILURE=true
ROLLBACK_RE_ENABLE_ON_SUCCESS=true

# Audit Settings
AUDIT_LOG_SELECTION_DECISIONS=true
AUDIT_LOG_LLM_RESPONSES=true
AUDIT_LOG_CACHE_HITS=true
AUDIT_SELECTION_PROOFS_DIR=artifacts/audit_pack/selection_proofs
AUDIT_TWO_CELLS_FILE=artifacts/audit_pack/2cells.jsonl

# Development Settings
USE_MOCK_LLM=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# CI/CD Settings (for GitHub Actions)
CI_MODE=false
CI_USE_MOCK=true
CI_NO_NETWORK=true